class Solution(object):
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        if not needle:
            return 0
        
        if len(haystack) < len(needle):
            return -1
        
        p1 = 0
        p2 = 0
        len1 = len(haystack)
        len2 = len(needle)
        
        while p1 < len1 and p2 < len2:
            if haystack[p1] == needle[p2]:
                p1 = p1 + 1
                p2 = p2 + 1
                

            elif haystack[p1] != needle[p2] and p2 != 0:
                p1 = p1 - p2 + 1
                p2 = 0
                
            else:
                p1 = p1 + 1
                
        
        if p2 == len2:
            return p1 - len2
        else:
            return -1
        
