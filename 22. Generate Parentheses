class Solution(object):
    def generateParenthesis(self, n):
        """
        :type n: int
        :rtype: List[str]
        """
        if n == 0:
            return []
        
        result = []
        self.helper(n,n,'',result)
        return result
    
    def helper(self,l,r,item,result):
        if l > r:
            return
        
        if l == r == 0:
            result.append(item)
            
        if l > 0:
            self.helper(l-1, r ,item + '(',result)
            
        if r > 0:
            self.helper(l, r-1 ,item + ')',result)
